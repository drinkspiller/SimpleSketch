{
  "name": "simple-sketch",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/drinkspiller/SimpleSketch.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "dev": "npm run start",
    "build": "rm -rf ./dist && npm run ngpackagr && cp README.md ./dist/simple-sketch && (cd dist/simple-sketch && npm pack)",
    "build:sass": "npx sass src/styles.scss ./src/simple-sketch/assets/styles.css --load-path=node_modules  --no-source-map",
    "lt": "npx concurrently \"ng serve\" \"lt --port 4200\"",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "ngpackagr": "npx ng-packagr -p src/simple-sketch/ng-package.json",
    "fix": "npx gts fix ./src/",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint",
    "prebuild": "npm run fix && npm run build:sass",
    "publish": "npm run build && npm publish ./dist/simple-sketch --verbose",
    "bump": "(cd ./src/simple-sketch && npm version patch)",
    "yalc:publish": "(cd ./dist/simple-sketch && yalc publish --no-scripts)",
    "yalc:push": "(cd ./dist/simple-sketch && yalc push)"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/cdk": "~17.0.4",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/material": "~17.0.4",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@iplab/ngx-color-picker": "^17.1.2",
    "@ngrx/component-store": "^17.0.1",
    "normalize.css": "^8.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.8",
    "@angular/cli": "^17.0.8",
    "@angular/compiler-cli": "^17.0.0",
    "@types/concurrently": "^7.0.0",
    "@types/jasmine": "~5.1.0",
    "@types/localtunnel": "^2.0.4",
    "@types/node": "20.8.2",
    "@types/semver": "^7.5.6",
    "concurrently": "^8.2.2",
    "gts": "^5.2.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "localtunnel": "^2.0.2",
    "ng-packagr": "^17.0.3",
    "semver": "^7.5.4",
    "typescript": "~5.2.2"
  }
}
